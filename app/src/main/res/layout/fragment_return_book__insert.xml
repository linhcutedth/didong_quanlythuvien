<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_DocGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã độc giả"
        android:textSize="20dp"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginVertical="7dp"
        android:layout_below="@+id/txt_DocGia"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/vien" />
    <TextView
        android:id="@+id/tv_ngaytra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày trả"
        android:textSize="20dp"
        android:layout_below="@+id/spinner"
        />
    <EditText
        android:id="@+id/txt_ngaytra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vien"
        android:layout_marginVertical="7dp"
        android:padding="15dp"
        android:textColor="@color/m4"
        android:textColorHint="@color/m2"
        android:hint="Ngày trả"
        android:textSize="20dp"
        android:layout_below="@+id/tv_ngaytra"></EditText>
    <TextView
        android:id="@+id/tv_sachtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sách trả"
        android:textSize="20dp"
        android:layout_below="@+id/txt_ngaytra"
        />
    <TextView
        android:id="@+id/sachtra"
        android:textColor="@color/m4"
        android:textSize="20dp"
        android:textColorHint="@color/m2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/vien"
        android:layout_marginVertical="7dp"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="16dp"
        android:hint="Chọn sách"
        android:layout_below="@+id/tv_sachtra"
        android:padding="15dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/sachtra"
        android:layout_marginTop="15dp"
        android:text="Thêm mới"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="@color/m4"/>


</RelativeLayout>