<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dg_item"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_delete_24"
            app:tint="#FD5D5D">

        </ImageView>

        <TextView
            android:id="@+id/txt_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Họ tên"
            android:textColor="#163172"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_typeReader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fname"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Loại độc giả"
            android:textColor="#163172"
            android:textSize="17dp"
            android:textStyle="italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_tinhtrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Tình trạng "
            android:textColor="#163172"
            android:textSize="17dp"
            android:visibility="visible"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txt_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ngày sinh"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ngày sinh"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ngày sinh"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_nglt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ngày sinh"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ma doc gia"
            android:textSize="20dp"
            android:visibility="invisible" />


    </RelativeLayout>

</RelativeLayout>