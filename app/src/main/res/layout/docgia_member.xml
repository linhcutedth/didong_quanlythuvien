<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Họ tên"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fname"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Ngày sinh"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_typeReader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_birthdate"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Loại độc giả"
            />
        <TextView
            android:visibility="visible"
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_typeReader"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Địa chỉ"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Email"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_nglt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Ngày lập thẻ"
            />

        <TextView
            android:visibility="visible"
            android:id="@+id/txt_tinhtrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nglt"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Tình trạng "
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tinhtrang"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageButton
                android:background="@null"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"/>

            <ImageButton
                android:visibility="gone"
                android:background="@null"
                android:src="@drawable/ic_edit"
                android:id="@+id/txt_delete"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>