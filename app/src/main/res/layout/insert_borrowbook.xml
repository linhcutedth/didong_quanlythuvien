<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="10dp">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="7dp"
        android:background="@drawable/vien" />

    <EditText
        android:id="@+id/txt_ngaymuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Ngày mượn"
        android:inputType="number" />

    <TextView
        android:id="@+id/sachmuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ngaymuon"
        android:layout_centerInParent="true"
        android:layout_marginVertical="7dp"
        android:background="@drawable/vien"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="16dp"
        android:hint="Chọn sách"
        android:padding="15dp"
        android:textColor="@color/m4"
        android:textColorHint="@color/m2"
        android:textSize="20dp" />
    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/sachmuon"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/main_cl"
        android:text="Thêm mới"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>