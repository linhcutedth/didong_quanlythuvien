<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/fragment_detail">
    <LinearLayout
        android:id="@+id/detail_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="20dp"
            android:textColor="@color/m4"
            />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hoten"
            android:layout_marginVertical="10dp"
            android:background="@drawable/vien"
            android:enabled="false"
            android:padding="15dp"
            android:textColor="@color/m4"
            android:textColorHint="@color/m2"
            android:textSize="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail_email"
        android:layout_below="@+id/detail_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="@color/m4"
            />
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ngaysinh"
            android:background="@drawable/vien"
            android:layout_marginVertical="10dp"
            android:padding="15dp"
            android:textColor="@color/m4"
            android:textColorHint="@color/m2"
            android:enabled="false"
            android:textSize="20dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail_phone"
        android:layout_below="@+id/detail_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điện thoại"
            android:textSize="20dp"
            android:textColor="@color/m4"
            />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:background="@drawable/vien"
            android:layout_marginVertical="10dp"
            android:padding="15dp"
            android:textColor="@color/m4"
            android:textColorHint="@color/m2"
            android:textSize="20dp"></EditText>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_address"
            android:layout_below="@+id/detail_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="20dp"
                android:textColor="@color/m4"
                />
            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:background="@drawable/vien"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:textColor="@color/m4"
                android:textColorHint="@color/m2"
                android:textSize="20dp"></EditText>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/detail_sex"
            android:layout_below="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"

            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:orientation="horizontal"
                android:id="@+id/sex_group">
                <RadioButton
                    android:id="@+id/sex_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    android:text="Nữ"
                    android:textColor="@color/m3"
                    android:textSize="20dp">
                    <!--            android:onClick="onRadioButtonClicked"-->
                </RadioButton>

                <RadioButton
                    android:id="@+id/sex_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@+id/sex_female"
                    android:padding="15dp"
                    android:text="Nam"
                    android:textColor="@color/m3"
                    android:textSize="20dp"></RadioButton>
                <!--            android:onClick="onRadioButtonClicked"></RadioButton>-->
            </RadioGroup>
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="20dp"
                android:visibility="invisible"
                android:textColor="@color/m4"
                />
            <EditText
                android:id="@+id/edit_Sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sex"
                android:background="@drawable/vien"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:textColor="@color/m4"
                android:textColorHint="@color/m2"
                android:textSize="20dp"
                android:visibility="invisible"></EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_address"
            android:visibility="invisible"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="20dp"
                android:textColor="@color/m4"
                />
            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:background="@drawable/vien"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:textColor="@color/m4"
                android:textColorHint="@color/m2"
                android:textSize="20dp"></EditText>
        </LinearLayout>
        <Button
            android:id="@+id/update_account_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/m4"/>
    </RelativeLayout>
</LinearLayout>
